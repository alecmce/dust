<?xml version="1.0" encoding="utf-8"?>
<project>

    <meta title="<%=title%>"
          package="<%=package%>"
          version="<%=version%>"
          company="<%=company%>" />

    <app main="<%=main%>"
         file="<%=output%>"
         path="<%=bin%>" />

    <% if fullscreen %><set name="fullscreen" />
    <% end %>

    <window width="<%=width%>"
            height="<%=height%>"
            fps="<%=fps%>"
            background="<%=background%>"
            orientation="<%=orientation%>"
            resizable="<%=resizable%>" />

    <window width="0" height="0" if="fullscreen" />

    <set name="BUILD_DIR" value="<%=bin%>" />

    <% src.split(" ").each do |source|%>
    <classpath name="<%=source%>" />
    <% end%>

    <% libs.split(" ").each do |lib|%>
    <haxelib name="<%=lib%>" />
    <% end%>

    <% if debug%><haxedef name="debug" />
    <haxedef name="fdb" if="flash" /><% end%>

    <assets path="<%=assets%>" include="*" exclude="nme.svg" />

    <ndll name="std" />
    <ndll name="regexp" />
    <ndll name="zlib" />
    <ndll name="nme" haxelib="nme" />

    <icon path="<%=icon%>" />

</project>